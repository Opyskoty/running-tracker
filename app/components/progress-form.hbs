{{yield}}
<form {{on "submit" this.handleSubmit}}>
  <label for="amount">Add Miles</label>
  <Input @type="text" id="amount" name="amount" value={{this.value}} {{on "change" this.updateValue}} />
  <button class="log-miles" type="submit">Log Miles</button>
</form>
<div>
  <button class="new-goal" type="button" {{on "click" this.newGoal}}>New Goal</button>
</div>